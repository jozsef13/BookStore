@page
@model RegisterModel
<body>
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Sign up</strong></div>
            </div>
        </div>
    </div>

    <div class="site-section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="h3 mb-3 text-black">Creating an account:</h2>
                </div>
                <div class="col-md-7">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                        <div class="p-3 p-lg-5 border">
                            <div class="form-group column">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="col-md-10">
                                    <label asp-for="Input.FirstName"></label>
                                    <input asp-for="Input.FirstName" class="form-control" required />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="col-md-10">
                                    <label asp-for="Input.LastName"></label>
                                    <input asp-for="Input.LastName" class="form-control" required />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="col-md-10">
                                    <label asp-for="Input.Email">Email</label>
                                    <input type="text" asp-for="Input.Email" class="form-control" required>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="col-md-10">
                                    <label asp-for="Input.Password"><b>Password</b></label>
                                    <input type="password" asp-for="Input.Password" class="form-control" required>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    <small>
                                        <i class="fa fa-info-circle"></i> Must contain numbers, letters, 6 unique characters, uppercase letter, and the length must be of minimum 8 characters
                                    </small>
                                </div>
                                <br />
                                <div class="col-md-10">
                                    <label asp-for="Input.ConfirmPassword"><b>Confirm Password</b></label>
                                    <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="col-md-12">
                                    <label asp-for="Input.Address"></label>
                                    <input type="text" asp-for="Input.Address" class="form-control" required />
                                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                                    <small>
                                        <i class="fa fa-info-circle"></i> Full address: Street, street number, city, county, country.
                                    </small>
                                </div>
                                <br />
                                <div class="col-md-6">
                                    <label asp-for="Input.DateOfBirth"></label>
                                    <input type="date" asp-for="Input.DateOfBirth" class="form-control" required />
                                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="col-md-6">
                                    <label asp-for="Input.GenderType"></label>
                                    <select asp-for="Input.GenderType" required>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                    <span asp-validation-for="Input.GenderType" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="col-md-6" align="right">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                                </div>
                                <br />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-5 ml-auto">
                    <br><br><br>
                    <br><br>

                    <div class="p-1 p-lg-1 border">
                        <div class"col-lg-12" align="center">
                            <a id="login" asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg btn-block"><b>Already have an account? </b></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
