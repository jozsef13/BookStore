@page
@model LoginModel
    <body>
        <div class="bg-light py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mb-0"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Login</strong></div>
                </div>
            </div>
        </div>

        <div class="site-section">
            <form id="account" method="post">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="h3 mb-3 text-black">Login here</h2>
                        </div>
                        <div class="col-md-7">
                            <div class="p-3 p-lg-5 border">
                                <div class="form-group column">
                                    <div class="col-md-6">
                                        <label asp-for="Input.Email" class="text-black"> <b> Email </b></label>
                                        <input asp-for="Input.Email" class="form-control" type="text" required />
                                        <span asp-validation-for="Input.Email" asp-error class="text-danger"></span>
                                    </div>
                                    <br />
                                    <div class="col-md-6">
                                        <label asp-for="Input.Password"><b>Password</b></label>
                                        <input asp-for="Input.Password" class="form-control" type="password" required />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>

                                <div class="col-md-6">
                                    <a href="#"><span class="psw">Forgot my username/password</span></a>
                                </div>
                                <br>

                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Log in</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5 ml-auto">
                            <br><br><br>
                            <div class="col-lg-13">
                                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg btn-block">Don't have an account?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </body>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }