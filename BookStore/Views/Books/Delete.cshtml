@model BookStore.Models.Book

<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h2 class="pageTitle">Delete Book: @Html.DisplayFor(model => model.Title) </h2><br />
            </div>
        </div>
    </div>
</section>
<div class="container">
    <main role="main">
        <div id="wrapper">
            <section id="content">
                <div class="container">
                    <div class="about">
                        <div class="col-lg-4">
                            Are you sure you want to delete this book?
                            <br />
                            <form asp-action="DeleteConfirmed">
                                <input type="hidden" asp-for="BookId" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
</div>
