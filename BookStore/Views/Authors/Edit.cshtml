@model Author

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a asp-controller="Authors" asp-action="Index">Authors</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Edit Author</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">Edit Book: </h2>
            </div>
            <div class="col-md-10">
                <form asp-action="EditSave" enctype="multipart/form-data">
                    <div class="p-3 p-lg-5 border">
                        <div class="form-group column">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="AuthorId" />
                            <div class="col-md-10">
                                <label asp-for="FirstName">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="col-md-10">
                                <label asp-for="LastName">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <br />

                            <div class="col-md-10">
                                <label asp-for="About">Description</label>
                                <input type="text" asp-for="About" class="form-control">
                                <span asp-validation-for="About" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="col-md-10">
                                <label asp-for="Nationality">Nationality</label>
                                <input type="text" asp-for="Nationality" class="form-control">
                                <span asp-validation-for="Nationality" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="col-md-4" align="right">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Edit</button>
                            </div>
                            <br />
                            <div class="col-md-4" align="right">
                                <a class="btn btn-primary btn-lg btn-block" asp-controller="Authors" asp-action="Index">Go Back</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
