@model Book

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a asp-controller="Books" asp-action="Index">Books</a> <span class="mx-2 mb-0">/</span> <a asp-controller="Books" asp-action="Details">@Model.Title</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Add Review</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="h3 mb-3 text-black">@Model.Title</h2>
            </div>
            <img style="width:400px;height:400px;" src="@Model.CoverPhotoPath">

            <div class="col-md-7">

                <form asp-controller="Reviews" asp-action="AddReviewAction" asp-route-bookId="@Model.BookId" method="post">

                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="reviewTitle" class="text-black">Review Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="reviewTitle" name="reviewTitle" placeholder="" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label for="reviewRating" class="text-black">Rating <span class="text-danger">*</span></label>
                                <input type="number" min="1" max="5" class="form-control" id="reviewRating" name="reviewRating" placeholder="" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="reviewText" class="text-black">Review <span class="text-danger">*</span></label>
                                <textarea name="reviewText" id="reviewText" cols="30" rows="7" class="form-control" required></textarea>
                            </div>
                        </div>
                        <br>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Post review">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
