@model Order
<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a asp-controller="Home" asp-action="Index">Home</a> <span class="mx-2 mb-0">/</span> <a asp-area="Identity" asp-page="/Account/Manage/Index">My Account</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Order</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="product-thumbnail">Cover</th>
                                <th class="product-name">Title</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-total">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OrderBook orderBook in Model.OrderBooks)
                            {
                                <tr>
                                    <td class="product-thumbnail">
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@orderBook.BookId"><img style="width:400px;height:200px;" src="@orderBook.Book.CoverPhotoPath" alt="Image" class="img-fluid"></a>
                                    </td>
                                    <td class="product-name">
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@orderBook.BookId"><h2 class="h5 text-black">@orderBook.Book.Title</h2></a>
                                    </td>
                                    <td>@orderBook.Book.Title</td>
                                    <td>@orderBook.BookQuantity</td>
                                    <td>@(orderBook.BookQuantity * orderBook.Book.Price)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-md-10">
                <div class="row mb-6">
                    <div class="col-md-6">
                        <u><h2 class="text-black">About order</h2></u>
                        <p>Username: @Model.User.UserName</p>
                        <p>Last Name: @Model.User.LastName</p>
                        <p>First Name: @Model.User.FirstName</p>
                        <p>E-Mail: @Model.User.Email</p>
                        <p>Delivery Address: @Model.User.Address</p>
                        <p>Phone Number: @Model.User.PhoneNumber</p>

                    </div>
                </div>
            </div>
            <p>  <a asp-controller="Orders" asp-action="OrderStatus" asp-route-id="@Model.OrderId" class="buy-now btn btn-sm btn-primary">Order Status</a> </p>
        </div>
    </div>
</div>